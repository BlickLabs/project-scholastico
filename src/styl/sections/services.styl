.services
  background-image url("../img/backgrounds/services-background-bottom.png")
  background-position bottom
  background-repeat no-repeat
  background-size 100%
  padding-bottom 120px
  position relative

  &-bg
    &-top
      background-image url("../img/backgrounds/services-background-top.png")
      background-position center
      background-repeat no-repeat
      background-size 100%
      height 770px
      position absolute
      right 0
      top -40px
      width 664px

  &-separator
    background-color $sGreen
    height 1px
    margin 30px 0
    width 515px

  &-schools
    display flex
    flex-direction row

    &-img
      height 578px
      width 545px

      &-container
        margin 0 108px 0 0

    &-subtitle
      color $sBlackLight
      font-size remify(20px)
      letter-spacing 0.4px
      line-height 35px

  &-ul
    color $sBlackLight
    font-size remify(19px)
    letter-spacing 0.4px
    line-height 45px
    list-style none
    padding-left 30px

  &-companies
    display flex
    flex-direction row
    justify-content flex-end
    margin 117px 74px

    &-img
      height 530px
      width 477px

      &-container
        margin-left 100px

  &-tourism
    position relative

    &-content
      box-shadow 0 27px 40px 0 rgba(0, 0, 0, 0.21)
      display flex
      flex-direction row
      margin 0 auto
      position relative
      width 1126px
      z-index 1

    &-background
      background-image url("../img/backgrounds/services-background-center.png")
      background-position center
      background-repeat no-repeat
      background-size 100%
      bottom -190px
      height 100%
      left 0
      position absolute
      width 210px

    &-img
      height 530px
      width 468px

      &-container
        height 530px
        margin-right 105px

    &-info
      &-container
        padding 75px 0 0 0

    &-subtitle
      &-container
        max-width 365px

    &-separator
      width 390px

    &-ul
      display flex
      flex-direction row

      & div:first-child
        margin-right 60px

  &-banner
    background-image url("../img/backgrounds/services-banner.jpg")
    background-position center
    background-repeat no-repeat
    background-size 100%
    height 420px
    margin 112px 0 90px 0
    position relative
    z-index 1

  &-our
    margin 45px auto 0 auto
    width 1160px

    &-title
      &-container
        margin-bottom 45px
        padding-left 44px

    &-card
      background-color $sWhite
      box-shadow 0 27px 40px 0 rgba(0, 0, 0, 0.15)
      height 391px
      margin-bottom 99px
      padding 55px 80px
      width 545px

    &-separator
      background-color $sGreen
      height 1px
      margin 30px 0 35px 0
      width 100%

    &-paragraph
      &-container
        max-width 358px
        text-align justify

@media screen and (min-width 880px) and (max-width 1200px)
  .services
    &-schools
      &-img
        height auto
        width 100%

        &-container
          width auto

    &-companies
      margin 115px 50px

      &-img
        height auto
        width 100%

        &-container
          margin-left 50px
          width auto

    &-our
      width 565px

@media screen and (max-width 1200px)
  .services
    &-tourism
        margin-top 50px
        padding 0 30px

        &-content
          background-color $sWhite
          flex-direction column
          width 100%

        &-img
          display none

          &-container
            background-image url("../img/services/services-img-three.png")
            background-position center
            background-repeat no-repeat
            background-size 100%
            height 200px
            margin-right 0

        &-info
          &-container
            margin 0 auto
            padding 50px 30px 0 30px

@media screen and (max-width 879px)
  .services
    margin-top 110px

    &-bg
      &-top
        background-position top right
        height 649px
        width 560px

    &-separator
      width 80%

    &-schools
      flex-direction column
      padding 0 30px

      &-img
        height auto
        width 100%

        &-container
          margin 0 0 30px 0
          width 80%

    &-companies
      flex-direction column-reverse
      margin 0
      padding 0 30px

      &-img
        height auto
        width 100%

        &-container
          margin 50px 0 30px 0
          width 80%

    &-banner
      height 200px
      margin-top 50px

    &-our
      width 660px

      &-card
        height 400px
        margin-bottom 45px
        padding 30px
        width 300px

@media screen and (max-width 700px)
  .services
    &-our
      width 320px

      &-card
        height 400px
        margin-bottom 45px
        padding 30px
        width 300px

@media screen and (max-width 520px)
  .services
    &-tourism
      &-ul
        flex-direction column
