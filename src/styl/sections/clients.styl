.clients
  background-image url("../img/backgrounds/clients-background-bottom.png")
  background-position bottom
  background-repeat no-repeat
  background-size 100%
  padding 174px 0 149px 0
  position relative

  &-content
    margin 0 auto
    max-width 1096px

  &-title
    &-container
      margin 0 0 87px 31px

  &-cards
    &-container
      display flex
      flex-wrap wrap

  &-card
    align-items center
    background-color $sWhite
    box-shadow 0 27px 40px 0 rgba(0, 0, 0, 0.13)
    display flex
    height 129px
    justify-content center
    margin 0 14px 72px 14px
    position relative
    width 246px
    z-index 1

    &-logo
      &-aeromexico
        height 24px
        width 142px

      &-bancomer
        height 42px
        width 145px

      &-cargill
        height 48px
        width 107px

      &-dmazenod
        height 68px
        width 91px

      &-tm
        height 60px
        width 60px

      &-daimler
        height 17px
        width 117px

      &-sierranevada
        height 67px
        width 136px

      &-posadas
        height 20px
        width 120px

      &-hp
        height 63px
        width 63px

      &-jefferson
        height 37px
        width 129px

      &-lancaster
        height 44px
        width 190px

      &-northridge
        height 63px
        width 45px

      &-pernod
        height 39px
        width 101px

      &-boehringer
        height 37px
        width 110px

      &-palaciohierro
        height 42px
        width 147px

      &-tecmonterrey
        height 53px
        width 145px

      &-edron
        height 63px
        width 136px

      &-unilever
        height 74px
        width 67px

      &-anahuac
        height 57px
        width 100px

      &-westhill
        height 44px
        width 110px

  &-background
    background-image url("../img/backgrounds/clients-background-right.png")
    background-position center
    background-repeat no-repeat
    background-size 100%
    bottom -300px
    height 1225px
    position absolute
    right 0
    width 758px

@media screen and (min-width 837px) and (max-width 1110px)
  .clients
    &-content
      max-width 822px

@media screen and (min-width 563px) and (max-width 836px)
  .clients
    &-content
      max-width 548px

@media screen and (max-width 768px)
  .clients
    padding-top 130px

    &-background
      bottom -185px
      height 760px
      width 470px

@media screen and (max-width 562px)
  .clients
    &-content
      max-width 274px
