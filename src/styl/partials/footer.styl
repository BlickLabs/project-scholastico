.footer
  align-items center
  background-image url("../img/backgrounds/footer-bg-1.png")
  background-position bottom left
  background-repeat no-repeat
  background-size 175px
  bottom 0
  display flex
  flex-direction row
  height 278px
  justify-content center
  position absolute
  width 100%

  & a span,
  & span
    color $sBlack
    font-size remify(15px)
    letter-spacing 0.4px

  &-logo
    height 90px
    width auto

    &-mobile
      display none

    &-mercedes
      height 20px
      width 182px

      &-container
        margin-top 18px

  &-sides-separator
    margin-top 8px

  &-info-container
    display flex
    flex-direction row
    margin-left 250px

    &-mobile
      display none

  &-privacy
    &-container
      display flex
      flex-direction row
      margin-bottom 14px

  &-icon
    &-insta
      height 20px
      width 20px

    &-fb
      height 20px
      width 11px

    &-container
      margin-left 70px

      &
        a:first-child
          margin-right 20px

  &-separator
    background-color $sBlack
    height 77px
    margin 0 76px
    width 1px

@media screen and (max-width 768px)
  .footer
    background-position bottom left -80px
    flex-direction column
    height 400px

    &-logo
      display none

      &-mobile
        display block
        height 50px

      &-mercedes
        height 15px
        width 140px

    &-info-container
      align-items center
      flex-direction column
      margin-left 0
      display none

      &-mobile
        align-items center
        display flex
        flex-direction column
        margin-top 30px

    &-sides-separator
      text-align center

    &-icon
      &-container
        display flex
        justify-content center
        margin 20px 0 0 0

    &-separator
      height 1px
      margin 20px 0
      width 100%

    &-copyright
      &-container
        margin-top 20px

@media screen and (min-width 769px) and (max-width 1100px)
  .footer
    &-info-container
      margin-left 40px

    &-icon
      &-container
        margin-left 40px

    &-separator
      margin 0 40px
