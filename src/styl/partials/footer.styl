.footer
  align-items center
  bottom 0
  color $sBlack
  display flex
  flex-direction row
  font-size remify(15px)
  height 278px
  justify-content center
  letter-spacing 0.4px
  position absolute
  width 100%

  &-logo
    height 90px
    width auto

    &-mercedes
      height 20px
      width 182px

      &-container
        margin-top 18px

  &-sides-separator
    margin-top 8px

  &-info-container
    display flex
    flex-direction row
    margin-left 250px

  &-privacy
    &-container
      display flex
      flex-direction row
      margin-bottom 14px

  &-icon
    &-insta
      height 20px
      width 20px

    &-fb
      height 20px
      width 11px

    &-container
      margin-left 70px

      &
        a:first-child
          margin-right 20px

  &-separator
    background-color $sBlack
    height 77px
    margin 0 76px
    width 1px

@media screen and (max-width 768px)
  .footer
    flex-direction column

    &-logo
      height 70px

      &-mercedes
        height 15px
        width 140px

    &-info-container
      align-items center
      flex-direction column
      margin-left 0

    &-separator
      height 1px
      margin 20px 0
      width 100%

@media screen and (min-width 769px) and (max-width 1100px)
  .footer
    &-info-container
      margin-left 40px

    &-icon
      &-container
        margin-left 40px

    &-separator
      margin 0 40px
