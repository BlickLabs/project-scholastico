*
  box-sizing border-box

html
  font-size unit($baseFontSize, 'px')
  min-height 100%
  position relative

  @media screen and (max-width: 768px)
    font-size 14.5px

  @media screen and (max-width: 480px)
    font-size 13px

body
  font-size inherit
  margin 0 0 278px 0

  &.noscroll
    overflow hidden

    &::after
      content ' '
      opacity 1
      z-index 9

a
  &, &:focus, &:hover, &:active
    text-decoration none

  outline 0

#page
  margin 0
  overflow hidden
  padding 0

// LOADERS //
.custom-loader
  display none
  text-align center
  width 100%

  .ball-pulse-sync
    div
      background white

.button-wrapper.disabled,
button[type="submit"][disabled]
  display none

  & + .custom-loader
    &:not(.vertical-center)
      display block

    &.vertical-center
      display flex
      height 100%
// END LOADERS //

// FORMS //
label.error
  color $errorColor
  display block
  padding-top 0.3em

.form-message
  i, span
    display inline-block

  span
    margin-left 0.5em

  &.error
    color $errorColor

  &.success
    color $successColor

  &.success, &.error
    margin-top 1em

input, textarea, button, select
  font-family inherit

  &, &:hover, &:active &:focus
    box-shadow none
    outline none

textarea
  resize none
// END FORMS //

// Generic styles

h1, h2, h3, h4, h5, h6, p
  margin 0

.scholastico
  &-button
    background-color $sGreen
    border none
    border-radius 12px
    box-shadow 0 27px 30px 0 rgba(0, 0, 0, 0.14)
    color $sWhite
    cursor pointer
    font-size $fsH5
    height 50px
    letter-spacing 2px
    padding 0 45px
    text-transform uppercase
    transition 0.3s

    &:hover
      background-color $sGreenStrong
      transition 0.3s

  &-paragraph-margin
    margin-bottom 20px

@media screen and (max-width 768px)
  body
    margin 0 0 400px 0

  .scholastico
    &-button
      padding 0 30px

